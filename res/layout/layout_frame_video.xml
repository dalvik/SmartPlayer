<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >
        
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="35.0dip"
		android:orientation="horizontal" 
		android:gravity="center_vertical"
		android:visibility="gone">

	    <Button
     	    android:id="@+id/frame_btn_local"
     	    style="@style/frame_button"
     	    android:text="@string/drovik_frame_image_local_str" />

     	<ImageView android:layout_width="wrap_content" 
     	    android:layout_height="fill_parent" 
     	    android:background="@drawable/frame_button_cutline"/>
     	
     	<Button
     	    android:id="@+id/frame_btn_beauty"
     	    style="@style/frame_button"
     	    android:text="@string/drovik_frame_image_beauty_str" />

     	<ImageView android:layout_width="wrap_content" 
     	    android:layout_height="fill_parent" 
     	    android:background="@drawable/frame_button_cutline"/>
     	
     	<Button 
     		android:id="@+id/frame_btn_scenery"
     		style="@style/frame_button"
         	android:text="@string/drovik_frame_image_scenery_str"/>
     	
     	<ImageView android:layout_width="wrap_content" 
     	    android:layout_height="fill_parent" 
     	    android:background="@drawable/frame_button_cutline"/>
     	
     	<Button 
     		android:id="@+id/frame_btn_other"
     		style="@style/frame_button"
         	android:text="@string/drovik_frame_image_other_str"/>
    </LinearLayout>

	<com.sky.drovik.widget.PullToRefreshListView
	  	android:id="@+id/frame_list_view_local_video"
	    style="@style/widget_listview"/>
